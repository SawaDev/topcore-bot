{
  "compilerOptions": {
    "baseUrl": ".",
    "noImplicitAny": false,
    "resolveJsonModule": true,
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es2021",
    "moduleResolution": "node",
    "strict": true,
    "sourceMap": true,
    "noImplicitThis": false,
    "lib": [
      "es2021"
    ],
    "skipLibCheck": true,
    "outDir": "dist",
    "paths": {
      "*": [
        "node_modules/*",
        "src/types/*",
        "src/*",
      ]
    }
  },
  "include": [
    "src/**/*",
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/telegram/locales/*.json",
    "global.d.ts"
  ],
  "typeRoots": [
    "telegram/types",
    "./node_modules/@types"
  ]
}
